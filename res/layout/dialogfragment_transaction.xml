<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/CLOUDS" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp" >

        <TextView
            android:id="@+id/amount_textView"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:padding="10dp"  
            android:textSize="25sp"
            android:gravity="center"
            android:background="@color/white"
            android:textColor="@color/CONCRETE" />

        <Spinner
            android:id="@+id/currency_spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:background="@color/white"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/key_one_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@color/white"
            android:textColor="@color/CONCRETE" />
        
        <Button
            android:id="@+id/key_two_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@color/white"
            android:textColor="@color/CONCRETE" />
        
        <Button
            android:id="@+id/key_three_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@color/white"
            android:textColor="@color/CONCRETE" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/key_four_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@color/white"
            android:textColor="@color/CONCRETE" />
        
        <Button
            android:id="@+id/key_five_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@color/white"
            android:textColor="@color/CONCRETE" />
        
        <Button
            android:id="@+id/key_six_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@color/white"
            android:textColor="@color/CONCRETE" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/key_seven_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@color/white"
            android:textColor="@color/CONCRETE" />
        
        <Button
            android:id="@+id/key_eight_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@color/white"
            android:textColor="@color/CONCRETE" />
        
        <Button
            android:id="@+id/key_nine_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@color/white"
            android:textColor="@color/CONCRETE" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/key_zero_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@color/white"
            android:textColor="@color/CONCRETE" />
        
        <Button
            android:id="@+id/key_dot_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@color/white"
            android:textColor="@color/CONCRETE" />
        
        <Button
            android:id="@+id/key_del_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="DEL"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@color/white"
            android:textColor="@color/CONCRETE" />

    </LinearLayout>
    
    
   	<LinearLayout
        android:id="@+id/budget_extra_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:visibility="visible" >
        
   	<EditText
		android:id="@+id/expense_category_name_editText"
		android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="10dp"
        android:background="@color/white"
        android:ems="10"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:hint="Enter Expense Category Name..."
        android:minLines="1"  >
	</EditText>    
	
   	    <Button
			android:id="@+id/expense_category_colorpicker_button"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="0.5dp"
			android:layout_weight="1"
			android:background="@color/white"
			android:padding="15dp" />
      
	</LinearLayout>
    

  	<LinearLayout
        android:id="@+id/expense_extra_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="1dp"
        android:visibility="visible" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="1dp">

                <Spinner
                    android:id="@+id/expense_category_spinner"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/white" />
                
                <Button
            		android:id="@+id/expense_date_button"
            		android:layout_width="0dp"
            		android:layout_height="match_parent"
            		android:layout_marginLeft="0.5dp"
            		android:layout_weight="1"
            		android:background="@color/white"
            		android:padding="15dp"
            		android:text="Date"
            		android:textSize="20sp"
            		android:textColor="@color/CONCRETE" />

           

        </LinearLayout>
		<EditText
					android:id="@+id/expense_memo_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:ems="10"
                    android:gravity="top"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:hint="Enter memo here..."
                    android:inputType="textMultiLine"
                    android:minLines="2"  >
                </EditText>

        
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp" >

        <Button
            android:id="@+id/key_cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0.5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="15dp"
            android:text="Cancel"
            android:textSize="20sp"
            android:textColor="@color/CONCRETE" />

        <Button
            android:id="@+id/key_ok_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.5dp"
            android:text="OK"
            android:textSize="20sp"
            android:padding="15dp"
            android:background="@color/white"
            android:textColor="@color/CONCRETE" />

    </LinearLayout>

</LinearLayout>
