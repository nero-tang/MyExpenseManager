<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/category_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="TextView"
            android:textColor="@color/CONCRETE"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/weekly_expense_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/category_name_textView"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/category_name_textView"
            android:gravity="center"
            android:text="$ 1000"
            android:textStyle="bold"
            android:textColor="@color/transaction_payout_amount"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/expense_over_budget_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/category_name_textView"
            android:text="Over Budget!"
            android:textColor="@color/ALIZARIN"
            android:textStyle="bold" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/expense_distribution_progressBar"
        style="@style/myProgressBar_expense_list_item"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:max="100"
        android:progress="50" />

</LinearLayout>
